{% extends 'base.html.twig' %}
{% block body_id 'hardware_software_search' %}

{% block main %}
    <div class="alert alert-info" role="alert">{{ 'Hardware i software u uƒçionici:' }}
        <b>{{ brojUcionice }}</b></div>

    <table class="table table-striped table-middle-aligned">
        {% if pagination|length > 0 %}
        {% for key,values in pagination %}
        <thead>
        <tr>
            <th scope="col">{{ key }}</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            {% for value in values %}
                <td>{{ value }}</td>
            {% endfor %}
        </tr>
        {% endfor %}
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'Nema hardvera!' }}</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
    <div class="alert alert-info" role="alert">{{ 'Ukupan broj opreme:' }} <b>{{ count }}</b></div>
{% endblock %}