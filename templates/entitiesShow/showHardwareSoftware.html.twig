{% extends 'base.html.twig' %}

{% block body_id 'hw_sw_show' %}

{% block body %}
    <br>
    <div class="alert alert-warning" role="alert">
        <h2>Pregled softvera na hardveru: {{ hardwareName.nazivHardware }}</h2>
    </div>
    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">{{ "Naziv softvera" }}</th>
            <th scope="col">{{ "Kontakt osoba" }}</th>
            <th scope="col">{{ "Trajanje licence" }}</th>
            <th scope="col">{{ "Vlasni≈°tvo" }}</th>
        </tr>
        </thead>
        <tbody>
        {% for software in softwares %}
            <tr>
                <td>{{ software.nazivSoftware }}</td>
                <td>{{ software.kontaktOsoba }}</td>
                <td>{{ software.trajanjeLicence }}</td>
                <td>{{ software.vlasnistvo.nazivVlasnika }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('hw_sw_edit', {brojInventara: hardware.brojInventara}) }}" class="btn btn-sm btn-success">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'Izmjeni software' }}
                        </a>
                        <a class="btn btn-primary btn-sm" href="{{ path('hardware_software') }}">
                            <i class="fa fa-plus-square" aria-hidden="true"></i> {{ 'Dodaj novi software' }}
                        </a>
                    </div>
                    <br>
                    <div class="section">
                        {{ include('entitiesActions/deleteHardwareSoftware.html.twig', {hardware: hardware}, with_context = false) }}
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

