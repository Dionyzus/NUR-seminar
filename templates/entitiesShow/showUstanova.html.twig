{% extends 'base.html.twig' %}

{% block body_id 'ustanova_show' %}

{% block body %}
    <br>
    <div class="alert alert-warning" role="alert">
        <h2>Pregled ustanove id-a: {{ ustanova.ustanovaId }}</h2>
    </div>
    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">{{ "Naziv ustanove" }}</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>{{ ustanova.nazivUstanove }}</td>
            {% if is_granted('ROLE_ADMIN') %}
            <td class="text-right">
                <div class="item-actions">
                    <a href="{{ path('ustanova_edit', {ustanovaId: ustanova.ustanovaId}) }}" class="btn btn-sm btn-success">
                        <i class="fa fa-edit" aria-hidden="true"></i> {{ 'uredi' }}
                    </a>
                </div>
                <br>
                <div class="section">
                    {{ include('entitiesActions/deleteUstanova.html.twig', {ustanova: ustanova}, with_context = false) }}
                </div>
            </td>
            {% endif %}
        </tr>
        </tbody>
    </table>
{% endblock %}
