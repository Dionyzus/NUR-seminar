{% extends 'base.html.twig' %}

{% block body_id 'lokacija_show' %}

{% block body %}
    <br>
    <div class="alert alert-warning" role="alert">
        <h2>Pregled lokacije id-a: {{ lokacija.brojUcionice }}</h2>
    </div>
    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">{{ "Opis lokacije" }}</th>
            <th scope="col">{{ "Naziv ustanove" }}</th>
            <th scope="col">{{ "Naziv organizacije" }}</th>
            <th scope="col">{{ "Naziv namjene" }}</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>{{ lokacija.opis}}</td>
            <td>{{ lokacija.ustanova.nazivUstanove }}</td>
            <td>{{ lokacija.organizacija.nazivOrganizacije }}</td>
            <td>{{ lokacija.namjena.nazivNamjene }}</td>
            <td class="text-right">
                <div class="item-actions">
                    <a href="{{ path('lokacija_edit', {brojUcionice: lokacija.brojUcionice}) }}" class="btn btn-sm btn-success">
                        <i class="fa fa-edit" aria-hidden="true"></i> {{ 'uredi' }}
                    </a>
                </div>
                <br>
                <div class="section">
                    {{ include('entitiesActions/deleteLokacija.html.twig', {lokacija: lokacija}, with_context = false) }}
                </div>
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
