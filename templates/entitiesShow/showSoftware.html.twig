{% extends 'base.html.twig' %}

{% block body_id 'software_show' %}

{% block body %}
    <br>
    <div class="alert alert-warning" role="alert">
        <h2>Pregled softvera šifre: {{ software.sifraSoftware }}</h2>
    </div>
    <table class="table table-striped table-dark">
        <tr>
            <th class="small text-muted pr-2" scope="row">{{ "Naziv softvera" }}</th>
            <td>{{ software.nazivSoftware }}</td>
        </tr>
        <tr>
            <th class="small text-muted pr-2" scope="row">{{ "Kontakt osoba" }}</th>
            <td>{{ software.kontaktOsoba }}</td>
        </tr>
        <tr>
            <th class="small text-muted pr-2" scope="row">{{ "Broj licenci" }}</th>
            <td>{{ software.brojLicenci }}</td>
        </tr>
        <tr>
            <th class="small text-muted pr-2" scope="row">{{ "Trajanje licence" }}</th>
            <td>{{ software.trajanjeLicence }}</td>
        </tr>
        <tr>
            <th class="small text-muted pr-2" scope="row">{{ "Datum nabave" }}</th>
            <td>{{ software.datumNabave|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th class="small text-muted pr-2" scope="row">{{ "Vrijednost" }}</th>
            <td>{{ software.vrijednost }}</td>
        </tr>
        <tr>
            <th class="small text-muted pr-2" scope="row">{{ "Opis" }}</th>
            <td>{{ software.opis }}</td>
        </tr>
        <tr>
            <th class="small text-muted pr-2" scope="row">{{ "Vlasništvo" }}</th>
            <td>{{ software.vlasnistvo.nazivVlasnika }}</td>
        </tr>
        <tr>
            <th class="small text-muted pr-2" scope="row">{{ "Ustanova" }}</th>
            <td>{{ software.ustanova.nazivUstanove }}</td>
        </tr>
        <tr>
            <th class="small text-muted pr-2" scope="row">{{ "Organizacija" }}</th>
            <td>{{ software.organizacija.nazivOrganizacije }}</td>
        </tr>
        {% if is_granted('ROLE_ADMIN') %}
        <tr>
            <th class="small text-muted pr-2" scope="row"><b>{{ "Opcije" }}</b></th>
            <td class="text-center">
                <p><a href="{{ path('software_edit', {sifraSoftware: software.sifraSoftware}) }}" class="btn btn-sm btn-primary">
                        <i class="fa fa-edit" aria-hidden="true"></i> {{ 'uredi' }}
                    </a>
                    {{ include('entitiesActions/deleteSoftware.html.twig', {software: software}, with_context = false) }}</p>
            </td>
        </tr>
        {% endif %}
    </table>
{% endblock %}
